<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="adapter"
            type="unicauca.movil.tubarberia.adapters.BarberiaAdapter"/>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            app:adapter="@{adapter}"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="@dimen/small_ten"
                app:fab_addButtonColorNormal="@color/colorAccent"
                app:fab_addButtonColorPressed="@color/floatPink"
                app:fab_labelStyle="@style/menu_label_stay"
                >

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/show_reser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_icon="@drawable/ic_barber_shop"
                    app:fab_colorPressed="@color/floatBlue"
                    app:fab_size="mini"
                    app:fab_title="@string/label_reser"
                    />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/show_maps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_icon="@drawable/ic_placebarber"
                    app:fab_colorNormal="@color/floatGreen"
                    app:fab_colorPressed="@color/floatGreencla"
                    app:fab_size="mini"
                    app:fab_title="@string/label_ubication"
                    />

            </com.getbase.floatingactionbutton.FloatingActionsMenu>

        </FrameLayout>

    </FrameLayout>
</layout>
