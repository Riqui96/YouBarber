<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="login"
            type="unicauca.movil.tubarberia.LoginActivity"/>

    </data>

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/barber_land"
            android:layout_width="@dimen/high_half"
            android:layout_height="@dimen/small_zero"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/barber_img" />

        <ImageView
            android:id="@+id/mask_land"
            android:layout_width="@dimen/high_half"
            android:layout_height="@dimen/small_zero"
            app:layout_constraintBottom_toBottomOf="@+id/barber_land"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/barber_land"
            app:layout_constraintTop_toTopOf="@+id/barber_land"
            app:srcCompat="@drawable/mask" />

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/small_zero"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_eight"
            android:layout_marginEnd="@dimen/small_eight"
            android:layout_marginLeft="@dimen/small_eight"
            android:layout_marginRight="@dimen/small_eight"
            android:layout_marginStart="@dimen/small_eight"
            android:text="@string/title_app"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/appTitle"
            android:textSize="@dimen/medium_fortys"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/mask_land" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/small_zero"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/small_eight"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mask_land"
            android:layout_marginLeft="@dimen/small_eight"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/small_eight"
            android:layout_marginStart="@dimen/small_eight"
            android:layout_marginEnd="@dimen/small_eight"
            android:id="@+id/textInputLayout3">

            <EditText
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username_login"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/small_zero"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/small_eight"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mask_land"
            android:layout_marginLeft="@dimen/small_eight"
            android:layout_marginTop="@dimen/small_eight"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
            android:layout_marginStart="@dimen/small_eight"
            android:layout_marginEnd="@dimen/small_eight">

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_app"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/small_zero"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_eight"
            android:text="@string/registrar_login"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:onClick="@{()-> login.goToRegist()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toRightOf="@+id/barber_land"
            app:layout_constraintRight_toLeftOf="@+id/button4" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="@dimen/small_zero"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_eight"
            android:layout_marginTop="@dimen/small_zero"
            android:text="@string/entrar_login"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:onClick="@{()-> login.goToNext()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/button3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button3"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>
</layout>
