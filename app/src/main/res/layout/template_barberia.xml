<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="barber"
            type="unicauca.movil.tubarberia.models.Barberia"/>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/small_zero"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_eight"
            android:layout_marginEnd="@dimen/small_eight"
            android:layout_marginLeft="@dimen/small_eight"
            android:layout_marginRight="@dimen/small_eight"
            android:layout_marginStart="@dimen/small_eight"
            android:layout_marginTop="@dimen/small_eight"
            android:elevation="@dimen/small_ten"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/cardView4">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/small_zero"
                    android:layout_height="@dimen/high_eighty"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:imgUrl="@{barber.image}"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/mask"
                    android:layout_width="@dimen/small_zero"
                    android:layout_height="@dimen/high_eighty"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/mask" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="@dimen/small_zero"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_eight"
                    android:layout_marginEnd="@dimen/small_eight"
                    android:layout_marginLeft="@dimen/small_eight"
                    android:layout_marginRight="@dimen/small_eight"
                    android:layout_marginStart="@dimen/small_eight"
                    android:text="@{barber.nombre}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
                    app:fontTtf='@{"openegrita"}'
                    app:layout_constraintBottom_toBottomOf="@+id/mask"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="Nombre Barberia" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/small_twentyfive"
                    android:layout_height="@dimen/small_twentyfive"
                    android:layout_marginTop="@dimen/small_twelve"
                    app:layout_constraintTop_toBottomOf="@+id/mask"
                    app:srcCompat="@drawable/ic_directions"
                    tools:layout_editor_absoluteX="24dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="@dimen/small_zero"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_eight"
                    android:layout_marginEnd="@dimen/small_eight"
                    android:layout_marginLeft="@dimen/small_eight"
                    android:layout_marginRight="@dimen/small_eight"
                    android:layout_marginStart="@dimen/small_eight"
                    android:text="@{barber.direccion}"
                    app:fontTtf='@{"opensan"}'
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintLeft_toRightOf="@+id/imageView"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="Direccion" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/small_twentyfive"
                    android:layout_height="@dimen/small_twentyfive"
                    android:layout_marginTop="@dimen/small_eight"
                    app:layout_constraintLeft_toLeftOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:srcCompat="@drawable/ic_horary" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="@dimen/small_zero"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_eight"
                    android:layout_marginEnd="@dimen/small_eight"
                    android:layout_marginLeft="@dimen/small_eight"
                    android:layout_marginRight="@dimen/small_eight"
                    android:layout_marginStart="@dimen/small_eight"
                    android:text="@{barber.horary}"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintHorizontal_bias="0.462"
                    app:layout_constraintLeft_toRightOf="@+id/imageView4"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="Lunes - Sabado" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</layout>
