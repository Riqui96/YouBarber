<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="unicauca.movil.tubarberia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="@string/maps_key"/>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".DetailBarberActivity"
            android:label="Descripcion" />
        <activity
            android:name=".RegistroActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ReservaActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".ReservaHechaActivity"
            android:label="Tus Reservas"
            />
        <activity android:name=".MapsActivity"
            android:label="Ubicacion Barbers"
            />
    </application>

</manifest>